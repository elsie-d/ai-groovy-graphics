<div class="profile-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <section class="new-project-section">
                <h3>Create a New Project</h3>
                <form class="img-prompt-form" onsubmit="event.preventDefault(); generatePhoto();">
                    <div class="form-group">
                        <input type="text" id="photo-input" class="form-control"
                            placeholder="A dog holding a cat in New York">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Generate</button>
                    </div>
                </form>
            </section>
            <section id="rendering-block">
                <div class="photo-container">
                    <img src="/photos/ai-generated-7897255_1280.jpg"
                        class="generated-image" alt="" />
                </div>
                <div class="d-flex justify-content-between" id="btns-generated">
                    <div>
                        <a href="" class="download-img" target="_blank" download="generated_image">Download Image</a>
                    </div>
                    <div>
                        <button type="submit" class="save-btn btn-primary">Save Image</button>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <section id="saved-imgs" class="saved-image-row">
        <h3><u>Album Creations</u></h3>
        {{#if images.length}}
        <div class="saved-row">
            {{#each images as |image|}}
            <div class="saved-image">
                <img src="{{image.url}}" id="saved-img-card" />
                <br />
                <button class="btn btn-sm del-btn" data-id="{{image.id}}">Delete</button>
            </div>
            {{/each}}
        </div>
        {{/if}}
    </section>



    <script src="./js/profile.js"></script>