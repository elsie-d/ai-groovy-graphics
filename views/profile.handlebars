<div class="profile-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3>Create a New Project</h3>
            <form class="img-prompt-form" onsubmit="event.preventDefault(); generatePhoto();">
                <div class="form-group">
                    <input type="text" id="photo-input" class="form-control"
                        placeholder="A dog holding a cat in New York">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Generate</button>
                </div>
            </form>
            <div class="photo-container">
                <img src="" class="generated-image" alt="" />
            </div>
            <div class="d-flex justify-content-between" id="btns-generated">
                <div>
                    <a href="" class="download-img" target="_blank" download="generated_image">Download Image</a>
                </div>
                <div>
                    <button type="submit" class="save-btn btn-primary">Save Image</button>
                </div>
            </div>
            <div id="saved-imgs"> 
                {{#if images.length}}
                <h3>Saved Images</h3>
                {{#each images as |image|}}
                <div class="card">
                    <div>
                        <img src="{{image.url}}" id="saved-img-card"/>
                    </div>
                    <div>
                    <button class="btn btn-sm btn-danger" data-id="{{image.id}}">Delete</button>
                    </div>
                    
                </div>
                {{/each}}
            </div>
            {{/if}}
        </div>
    </div>
</div>



<script src="./js/profile.js"></script>